@model EnterChatWeb.Models.NoteCategory

@{ 
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Создание категории</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<form asp-action="AddNoteCategory" id="login-form" method="post" asp-controller="Data">
    <div asp-validation-summary="All"></div>
    <div class="container text-center">
        <div>
            <input type="text" asp-for="Title" placeholder="Название"/>
        </div>
        <div>
            <input id="action-submit" type="submit" value="Добавить"/>
        </div>
    </div>
</form>