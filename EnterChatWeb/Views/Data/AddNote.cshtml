@model EnterChatWeb.Models.Note

@{ 
    Layout = null;
}

<form asp-action="AddNote" method="post" asp-controller="Data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">Тема</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Текст заметки</label>
        <textarea rows="5" asp-for="Text" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>