@model EnterChatWeb.Models.ExtraModel.EditChatMemberExtraModel
@{ 
    Layout = null;
}

<h4>Удаление сотрудника из чата "@Model.Title"</h4>

<form asp-action="DeleteChatMember" method="post" asp-controller="Data">
    <div asp-validation-summary="All"></div>
    <div>
        <select asp-for="ID" class="form-control">
            @foreach (var mem in Model.WorkerChatMembers)
            {
                <option value="@mem.ID">@mem.FullName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Удалить из чата" class="btn btn-default" />
    </div>
</form>