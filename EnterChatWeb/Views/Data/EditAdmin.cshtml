@model EnterChatWeb.Models.AdminModelEdit

@{
    Layout = null;
}

<form asp-action="EditAdmin" asp-controller="Data" asp-route-id="@Model.ID">
<div asp-validation-summary="All"></div>
<div class="form-group">
    <label asp-for="FirstName" class="control-label">Имя</label>
    <input type="text" asp-for="FirstName" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="SecondName" class="control-label">Фамилия</label>
    <input type="text" asp-for="SecondName" class="form-control" />
</div>
<div class="checkbox">
    <label asp-for="Status" class="control-label">Админ?</label>
    <input asp-for="Status" type="checkbox" />
</div>
<div class="form-group">
    <input type="submit" value="Сохранить" class="btn btn-default" />
</div>
</form>