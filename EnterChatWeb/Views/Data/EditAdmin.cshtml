@model EnterChatWeb.Models.AdminModelEdit

@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование данных администратора</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<form asp-action="EditAdmin" id="login-form" asp-controller="Data" asp-route-id="@Model.ID">
    <div asp-validation-summary="All"></div>
    <div class="container text-center">
        <div>
            <input type="text" asp-for="FirstName" placeholder="Имя" />
        </div>
        <div>
            <input type="text" asp-for="SecondName" placeholder="Фамилия" />
        </div>
        <div>
            <input id="action-submit" type="submit" value="Сохранить"/>
        </div>
    </div>
</form>