@model EnterChatWeb.Models.Department
@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>добавить отдел</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<form asp-action="AddDep" id="login-form" method="post" asp-controller="Data">
    <div asp-validation-summary="All"></div>
    <div class="container text-center">
        <div>
            <input type="text" asp-for="Title" placeholder="Название" />
        </div>
        <div>
            <label asp-for="Status" class="control-label">Привилегии администратора</label>
            <input asp-for="Status" type="checkbox" value="Status" />
        </div>
        <div>
            <input id="action-submit" type="submit" value="Добавить"/>
        </div>
    </div>
</form>