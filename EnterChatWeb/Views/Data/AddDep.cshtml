@model EnterChatWeb.Models.Department
@{
    Layout = null;
}
<form asp-action="AddDep" method="post" asp-controller="Data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="checkbox">
        <label asp-for="Status" class="control-label">Привилегии администратора</label>
        <input asp-for="Status" type="checkbox" value="Status" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>