@model EnterChatWeb.Models.ExtraModel.NotePlusCategoriesList

@{
    Layout = null;
}

<form asp-action="EditNote" method="post" asp-controller="Data" asp-route-id="@Model.ID">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">Тема</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Текст заметки</label>
        <textarea rows="5" asp-for="Text" class="form-control"></textarea>
    </div>
    <div>
        <select asp-for="NoteCategoryID" class="form-control">
            @foreach (var cat in Model.NoteCategories)
            {
                <option value="@cat.ID">@cat.Title</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>