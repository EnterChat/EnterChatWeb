@model EnterChatWeb.Models.Worker
@{ 
    Layout = null;
}
<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.SecondName)
        </dd>
    </dl>

    <div>
        <form asp-controller="Data" asp-action="DeleteWorker" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>

</div>