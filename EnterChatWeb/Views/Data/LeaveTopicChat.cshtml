@model EnterChatWeb.Models.Topic

@{
    Layout = null;
}

<h3>Вы собираетесь покинуть чат "@Model.Title"</h3>

<div>
    <dl class="dl-horizontal">
        <dt>Тема</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>Дата создания</dt>
        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>

    <div>
        <form asp-controller="Data" asp-action="LeaveTopicChat" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Покинуть" />
            </div>
        </form>
    </div>

</div>