@model IEnumerable<EnterChatWeb.Models.Note>

<head>
    <title>Заметки</title>
</head>

<h1>Заметки компании</h1>
<a asp-action="AddNote" asp-controller="Data">Добавить заметку</a>
<div class="list-group">
    <div class="list-group">
        @foreach (Note n in Model)
        {
            <div class="list-group-item col-xs-6">
                <h4>@n.Title</h4>
                <p>@n.Text</p>
                <p>Создан: @n.CreationDate</p>
                <p>Автор: @n.UserPlusWorker.FirstName @n.UserPlusWorker.SecondName @n.UserPlusWorker.Email</p>
                <p>Отдел: @n.UserPlusWorker.DepartmentName</p>
                <a asp-action="EditNote" asp-controller="Data" asp-route-id="@n.ID">Изменить</a>
                <a asp-action="DeleteFile" asp-controller="Data" asp-route-id="@n.ID">Удалить</a>
            </div>

        }
    </div>
</div>