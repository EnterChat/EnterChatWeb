@model EnterChatWeb.Models.User
@{
    Layout = null;
}

<form asp-action="EditUser" asp-controller="Data" asp-route-id="@Model.ID">
    <div class="form-group">
        <label asp-for="Login" class="control-label">Логин</label>
        <input type="text" asp-for="Login" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Почта</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>