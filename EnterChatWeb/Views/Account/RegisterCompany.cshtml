@model EnterChatWeb.Models.RegModel
@{   
     Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Зарегистрировать компанию</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <form asp-action="RegisterCompany" asp-controller="Account" method="post">
        <div asp-validation-summary="All"></div>
        <p>
            <label asp-for="Title">Название компании: </label>
            <input asp-for="Title" />
        </p>
        <p>
            <label asp-for="WorkEmail">Корпоративная почта: </label>
            <input asp-for="WorkEmail" />
        </p>

        <p>
            <label asp-for="DepTitle">Название главного отдела(администраторы): </label>
            <input asp-for="DepTitle" />
        </p>

        <p>
            <label asp-for="FirstName">Имя: </label>
            <input asp-for="FirstName" />
        </p>
        <p>
            <label asp-for="SecondName">Фамилия: </label>
            <input asp-for="SecondName" />
        </p>
        <p>
            <label asp-for="Login">Логин: </label>
            <input asp-for="Login" />
        </p>
        <p>
            <label asp-for="Email">Почта: </label>
            <input asp-for="Email" />
        </p>
        <p>
            <label asp-for="Password">Пароль: </label>
            <input asp-for="Password" />
        </p>

        <button type="submit">Зарегистрировать</button>
    </form>
</body>
</html>